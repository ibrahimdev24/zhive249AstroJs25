---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import socialData from '../components/Data/social.json';

interface SocialLink {
  icon: string;
  url: string;
}

interface ContactInfo {
  icon: string;
  title: string;
  content: string;
  link: string;
}

const contactInfo: ContactInfo[] = [
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
    </svg>`,
    title: 'Email',
    content: 'contact@zhive249.com',
    link: 'mailto:contact@zhive249.com'
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
    </svg>`,
    title: 'Phone',
    content: '+2 (011) 181-71523',
    link: 'tel:+201118171523'
  }
];
---

<Layout title="Contact Us | Zhive249">
  <main class="pt-24 pb-16">
    <!-- Hero Section -->
    <section class="relative py-20 bg-navy-800 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 via-transparent to-transparent"></div>
      <Container>
        <div class="relative z-10 max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white">
            Get in Touch
          </h1>
          <p class="text-xl text-navy-200">
            Have a project in mind? Let's discuss how we can help your business grow.
          </p>
        </div>
      </Container>
    </section>

    <!-- Contact Section -->
    <section class="py-30">
      <Container>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <!-- Contact Form -->
          <div class="order-2 lg:order-1">
            <form 
              action="https://formspree.io/f/xlddeywg"
              method="POST"
              class="space-y-6"
            >
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-navy-200 mb-2">First Name</label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white placeholder-navy-300 focus:outline-none focus:ring-2 focus:ring-primary-500/50"
                    placeholder="John"
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-navy-200 mb-2">Last Name</label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white placeholder-navy-300 focus:outline-none focus:ring-2 focus:ring-primary-500/50"
                    placeholder="Doe"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="block text-sm font-medium text-navy-200 mb-2">Phone Number</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white placeholder-navy-300 focus:outline-none focus:ring-2 focus:ring-primary-500/50"
                    placeholder="+20 123 456 7890"
                  />
                </div>
                <div>
                  <label for="company" class="block text-sm font-medium text-navy-200 mb-2">Company Name</label>
                  <input
                    type="text"
                    id="company"
                    name="company"
                    class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white placeholder-navy-300 focus:outline-none focus:ring-2 focus:ring-primary-500/50"
                    placeholder="Your Company"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="service" class="block text-sm font-medium text-navy-200 mb-2">Service Interest</label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white focus:outline-none focus:ring-2 focus:ring-primary-500/50"
                  >
                    <option value="">Select a service</option>
                    <option value="web-development">Web Development</option>
                    <option value="digital-marketing">Digital Marketing</option>
                    <option value="content-creation">Content Creation</option>
                    <option value="branding">Branding</option>
                    <option value="analytics">Analytics</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium text-navy-200 mb-2">Preferred Contact Method</label>
                  <div class="space-y-2">
                    <label class="flex items-center">
                      <input
                        type="radio"
                        name="contactMethod"
                        value="email"
                        class="form-radio text-primary-500 focus:ring-primary-500"
                        checked
                      />
                      <span class="ml-2 text-navy-200">Email</span>
                    </label>
                    <label class="flex items-center">
                      <input
                        type="radio"
                        name="contactMethod"
                        value="phone"
                        class="form-radio text-primary-500 focus:ring-primary-500"
                      />
                      <span class="ml-2 text-navy-200">Phone</span>
                    </label>
                  </div>
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-navy-200 mb-2">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white placeholder-navy-300 focus:outline-none focus:ring-2 focus:ring-primary-500/50"
                  placeholder="john@example.com"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-navy-200 mb-2">Subject</label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white placeholder-navy-300 focus:outline-none focus:ring-2 focus:ring-primary-500/50"
                  placeholder="How can we help?"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-navy-200 mb-2">Message</label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-3 rounded-lg bg-navy-600/50 border border-navy-500/10 text-white placeholder-navy-300 focus:outline-none focus:ring-2 focus:ring-primary-500/50 resize-none"
                  placeholder="Tell us about your project..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full px-8 py-4 bg-primary-500 text-white rounded-lg font-medium hover:bg-primary-600 transition-colors duration-300 flex items-center justify-center gap-2 relative"
                aria-live="polite"
              >
                <span class="submit-text">Send Message</span>
                <span class="loading-spinner hidden absolute">
                  <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="order-1 lg:order-2">
            <h2 class="text-2xl font-bold text-white mb-8">Contact Information</h2>
            <div class="space-y-8">
              {contactInfo.map((item) => (
                <a
                  href={item.link}
                  class="flex items-start space-x-4 p-4 rounded-lg bg-navy-700/50 hover:bg-navy-600/50 transition-colors duration-300"
                >
                  <div class="text-primary-500" set:html={item.icon} />
                  <div>
                    <h3 class="font-semibold text-white">{item.title}</h3>
                    <p class="text-navy-200">{item.content}</p>
                  </div>
                </a>
              ))}
            </div>

            <!-- Social Media Links -->
            <div class="mt-12">
              <h3 class="text-xl font-bold text-white mb-6">Connect With Us</h3>
              <div class="flex space-x-6">
                {Object.entries(socialData).map(([name, social]) => {
                  let icon;
                  switch (name.toLowerCase()) {
                    case 'facebook':
                      icon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>`;
                      break;
                    case 'instagram':
                      icon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                        <path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/>
                      </svg>`;
                      break;
                    case 'linkedin':
                      icon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>`;
                      break;
                    case 'tiktok':
                      icon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                        <path d="M19.589 6.686a4.793 4.793 0 0 1-3.77-4.245V2h-3.445v13.672a2.896 2.896 0 0 1-5.201 1.743l-.002-.001.002.001a2.895 2.895 0 0 1 3.183-4.51v-3.5a6.329 6.329 0 0 0-5.394 10.692 6.33 6.33 0 0 0 10.857-4.424V8.687a8.182 8.182 0 0 0 4.773 1.526V6.79a4.831 4.831 0 0 1-1.003-.104z"/>
                      </svg>`;
                      break;
                  }
                  return (
                    <a
                      href={social.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-navy-300 hover:text-primary-500 transition-colors duration-300"
                      aria-label={`Visit our ${name} page`}
                    >
                      <span class="sr-only">{name}</span>
                      <div class="w-5 h-5" set:html={icon} />
                    </a>
                  );
                })}
              </div>
            </div>
          </div>
        </div>
      </Container>
    </section>
  </main>
  <script>
    import '../scripts/contactForm';
  </script>
</Layout>
